{
  "name": "@remcostoeten/hygienic",
  "version": "0.1.0",
  "description": "Consolidates UI component imports from individual files into barrel imports. CLI tool with caching, git integration, and CI support.",
  "main": "dist/index.js",
  "bin": {
    "hygienic": "dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "bun test",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:check": "eslint 'src/**/*.{ts,tsx}'",
    "prepublishOnly": "bun run build",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "hygienic",
    "typescript",
    "imports",
    "consolidate",
    "code hygiene",
    "refactor",
    "formatter",
    "ui",
    "barrel"
  ],
  "author": "Remco Stoeten (@remcostoeten on GitHub)",
  "license": "BSD-3-Clause-Attribution",
  "homepage": "https://github.com/remcostoeten/hygienic#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/remcostoeten/hygienic.git"
  },
  "bugs": {
    "url": "https://github.com/remcostoeten/hygienic/issues"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.42.0",
    "@typescript-eslint/types": "^8.42.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "glob": "^10.3.0",
    "open": "^9.1.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "examples/**/*",
    "README.md",
    "LICENSE"
  ]
}
