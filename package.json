{
  "name": "@remcostoeten/hygienic",
  "version": "0.0.0",
  "description": "Consolidates UI component imports from individual files into barrel imports. CLI tool with caching, git integration, and CI support.",
  "main": "dist/index.js",
  "bin": {
    "hygienic": "dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "bun test",
    "test:jest": "jest",
    "prepublishOnly": "npm run build",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "hygienic",
    "typescript",
    "imports",
    "consolidate",
    "code hygiene",
    "refactor",
    "formatter",
    "ui",
    "barrel"
